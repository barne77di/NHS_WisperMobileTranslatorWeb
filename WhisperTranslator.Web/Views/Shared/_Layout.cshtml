@{
    var title = "Whisper Translator";
}
<!DOCTYPE html>
<html lang="en" class="nhsuk-frontend">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Whisper</title>
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="icon" type="image/svg+xml" href="/img/nhs-logo.png" />
    <script defer src="/js/chat.js"></script>
</head>
<body class="nhs-body">
    <header class="nhs-header" role="banner">
        <div class="nhs-header__container">
            <a href="/" class="nhs-header__logo" aria-label="NHS Home">
                <img src="/img/nhs-logo.png" alt="NHS" />
            </a>
            <div class="nhs-header__title">
                <h1 class="nhs-title">NHS Whisper Translator</h1>
                <p class="nhs-subtitle">Live speech translation &amp; playback</p>
            </div>
        </div>
    </header>

    <main class="nhs-container" id="maincontent">
        @RenderBody()
    </main>

    <footer class="nhs-footer">
        <div class="nhs-container nhs-footer__container">
            <p class="nhs-footer__text">© NHS Whisper Translator • Built for Mobile, Tablet &amp; Desktop</p>
        </div>
    </footer>
</body>
</html>