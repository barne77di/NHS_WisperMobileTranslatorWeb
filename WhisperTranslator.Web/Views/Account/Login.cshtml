@{
    Layout = "/Views/Desktop/Shared/_Layout.cshtml";
    var returnUrl = ViewBag.ReturnUrl as string ?? "/";
}
<!doctype html>
<html>
<body>
    <section class="card" style="max-width:460px;margin:24px auto;">
        <h2 class="nhs-title" style="margin-bottom:12px;">
            Sign in
        </h2>
        <form asp-controller="Account" asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <p><input name="email" type="email" placeholder="Email" required /></p>
            <p><input name="password" type="password" placeholder="Password" required /></p>
            @Html.AntiForgeryToken()
            <button type="submit">Sign in</button>
            <a href="@Url.Action("Register", "Account")" style="margin-left:12px;">Register</a>
        </form>
        @if (!ViewData.ModelState.IsValid)
        {
            <p>Invalid credentials</p>
        }
    </section>
</body>
</html>
